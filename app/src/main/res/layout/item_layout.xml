<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#dede"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="3dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/handicraftt"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/product_images"
                />


            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/product_images"
                android:layout_alignStart="@+id/product_images"
                android:layout_below="@+id/product_images"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="painting 1"
                android:textColor="#df64"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>



    </android.support.v7.widget.CardView>
    </RelativeLayout>

